<!DOCTYPE html>
<html>
<head>
  <% include ../partials/head %>
</head>
<body>
  <header>
    <% include ../partials/header %>
  </header>
  <div class="container">
    <div class="register-unregister-status">
      <div class="row">
        <div class="col-sm-12 nav-tab-holder">
          <ul class="nav nav-tabs row" role="tablist">
            <li class="active col-sm-4"><a href="#register" aria-controls="register" role="tab" data-toggle="tab">Register</a></li>
            <li class="col-sm-4"><a href="#unRegister" aria-controls="unRegister" role="tab" data-toggle="tab">Un-Register</a></li>
            <li class="col-sm-4"><a href="#checkStatus" aria-controls="checkStatus" role="tab" data-toggle="tab">Check Status</a></li>
          </ul>
        </div>
      </div>
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade in active" id="register">
          <div class="row">
            <div class="col-sm-12">
              <article role="interact">
                <h3 class="text-center">Register</h3>
                <form class="register" action="user/register" method="post">
                  <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Name">
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control" name="address" placeholder="Address">
                  </div>
                  <div class="form-group">
                    <input type="tel" class="form-control" name="phone" placeholder="Phone Number">
                  </div>
                  <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email Address">
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control" name="company" placeholder="Company">
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="Job Title">
                  </div>
                  <div class="form-group">
                    <input type="submit" class="btn btn-success btn-block"  value="SUBMIT">
                  </div>
                  <input type="text" name="conferenceName" hidden="true" value="2016 Summit">
                </form>
              </article>
            </div>
          </div>
        </div>
        <div role="tabpanel" class="tab-pane fade" id="unRegister">
          <div class="row">
            <div class="col-sm-12">
              <article role="interact">
                <h3 class="text-center">Un-Register</h3>
                <form class="register" action="/user/unregister" method="post">
                  <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email Address">
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control" name="confirmationNumber" placeholder="ConfirmationNumber: e.g. 1LN6T570EI4AL52X65V5E ">
                  </div>
                  <input type="text" name="conferenceName" hidden="true" value="2016 Summit">
                  <div class="form-group">
                    <input type="submit" class="btn btn-success btn-block"  value="SUBMIT">
                  </div>
                </form>
              </article>
            </div>
          </div>
        </div>
        <div role="tabpanel" class="tab-pane fade" id="checkStatus">
          <div class="row">
            <div class="col-sm-12">
              <article role="interact">
                <h3 class="text-center">Check Status</h3>
                <form class="register" action="/user/checkReservation" method="post">
                  <div class="form-group">
                    <input type="text" class="form-control" name="confirmationNumber" placeholder="ConfirmationNumber: e.g. 1LN6T570EI4AL52X65V5E ">
                  </div>
                  <div class="form-group">
                    <input type="submit" class="btn btn-success btn-block"  value="SUBMIT">
                  </div>
                </form>
              </article>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
